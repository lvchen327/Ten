<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="50dp"
              android:paddingBottom="50dp"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/critic_item_i1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/critic_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_margin="15dp"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/critic_item_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/critic_item_t1"
                android:layout_margin="15dp"
                android:background="@color/colorGray1"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"/>
            <View
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
            <TextView
                android:id="@+id/critic_t0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/critic_item_i2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/critic_item_t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"/>
            <View
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
            <TextView
                android:id="@+id/critic_item_realtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/critic_item_i3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/critic_item_t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
               />
            <ImageView
                android:id="@+id/critic_item_i4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/critic_item_i5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                />
            <View
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
            <TextView
                android:id="@+id/critic_item_author2"
                android:layout_margin="15dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:id="@+id/critic_item_authorbrief"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



        </LinearLayout>
    </ScrollView>

</LinearLayout>